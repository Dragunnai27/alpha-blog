<h1 align="center"> Listing all articles </h1>

<% @list_articles.each do |a| %>
<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">

            <div class="article-title">
                 <%= link_to a.title, article_path(a) %>
            </div>
            <div class="article-body">
                <!-- truncate giúp giới hạn hiển thị lại-->
                <%= truncate(a.description, lenght:100) %>
            </div>
                
            <div class="article-actions">
                <%= link_to "Edit this articles", edit_article_path(a),class: "btn btn-xs btn-primary" %>
                <%= link_to "Delete this article", article_path(a), method: :delete,
                                                    data: {confirm: "Are you sure"}, 
                                                    class: "btn btn-xs btn-danger" %>
            </div>    
        </div>
    </div>
</div>            
<% end %>
