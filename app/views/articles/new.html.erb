<h1>Create an articles</h1>

<%= form_for @article, url: articles_path do |f| %>
    <!--bảng nhập title -->
    <p>
        <%= f.label :title %> <br />
        <%= f.text_field :title %>
    </p>
    <!--bảng nhập description -->
    <p>
        <%= f.label :description %> <br />
        <%= f.text_area :description %>
    </p>
    <!--nút submit -->
    <p>
        <%= f.submit %>
    </p>
<% end %>