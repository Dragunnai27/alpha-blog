<h1> Edit exitsting article </h1>

<!-- hiển thị lỗi khi nhập-->
<% if @article.errors.any? %>
<h2>The following errors</h2>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @article do |f| %>
    <!--bảng nhập title -->
    <p>
        <%= f.label :title %> <br />
        <%= f.text_field :title %>
    </p>
    <!--bảng nhập description -->
    <p>
        <%= f.label :description %> <br />
        <%= f.text_area :description %>
    </p>
    <!--nút submit -->
    <p>
        <%= f.submit %>
    </p>
<% end %>

<%= link_to "Back to index", articles_path %>